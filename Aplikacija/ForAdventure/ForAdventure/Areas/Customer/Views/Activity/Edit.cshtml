@model Activity
<div class="row">
    <div class="col-1"></div>
    <div class="col-10">
        <form method="post" asp-action="Edit" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <input asp-for="UserId" hidden />
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary">Edit Activity</h2>
                    <hr />
                </div>
                <div class="row">
                    <div class="col-12 mb-3">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" style="width: 100%;" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 mb-3">
                        <label asp-for="ImageURL">Add Image</label>
                        <input type="file" name="file" id="uploadBox" class="form-control" />
                    </div>
        
                    <div class="col-6 mb-3">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" style="width: 100%;" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 mb-3">
                        <label asp-for="Location"></label>
                        <input asp-for="Location" class="form-control" style="width: 100%;" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                    <div class="col-6 mb-3">
                        <label asp-for="Address"></label>
                        <input asp-for="Address" class="form-control" style="width: 100%;" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 mb-3">
                        <label asp-for="Price"></label>
                        <input asp-for="Price" class="form-control" style="width: 100%;" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="col-6 mb-3">
                        <label asp-for="Capacity"></label>
                        <input asp-for="Capacity" class="form-control" style="width: 100%;" />
                        <span asp-validation-for="Capacity" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 mb-3">
                        <label asp-for="DateFrom"></label>
                        <input asp-for="DateFrom" class="form-control" style="width: 100%;" />
                        <span asp-validation-for="DateFrom" class="text-danger"></span>
                    </div>
                    <div class="col-6 mb-3">
                        <label asp-for="DateTo"></label>
                        <input asp-for="DateTo" class="form-control" style="width: 100%;" />
                        <span asp-validation-for="DateTo" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 mb-3">
                        <label asp-for="SkillLevel"></label>
                        <input asp-for="SkillLevel" class="form-control" style="width: 100%;" />
                        <span asp-validation-for="SkillLevel" class="text-danger"></span>
                    </div>
                    <div class="col-6 mb-3">
                        <label asp-for="ActivityTypeId"></label>
                        <input asp-for="ActivityTypeId" class="form-control" style="width: 100%;" />
                        <span asp-validation-for="ActivityTypeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary" style="width: 150px;">Update</button>
                        <a asp-controller="Activity" asp-action="MyActivities" asp-route-UserId="@Model.UserId" class="btn btn-secondary" style="width: 150px;">View your activities</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-1"></div>
</div>
